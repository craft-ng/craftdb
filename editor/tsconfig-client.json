{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "sourceMap": true,
    "rootDir": "src",
    "allowJs": true
  },
  "include": [
    "src/*.ts",
    "src/*.js",
    "src/client/**/*.ts",
    "src/client/**/*.js",
    "src/common/**/*.ts",
    "src/common/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "gulp-typescript"
  ]
}